  <!-- Ruffle will load your old Flash SWF here -->
  <embed src="VyondRebornEditor.swf" width="800" height="600">
</div>

<script>
  // Initialize Ruffle
  const ruffle = window.RufflePlayer.newest();
  const container = document.getElementById("flashContainer");
  container.innerHTML = "";
  const player = ruffle.createPlayer();
  container.appendChild(player);
  player.load("VyondRebornEditor.swf"); // Replace with your SWF file
</script>

